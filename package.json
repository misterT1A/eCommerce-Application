{
  "name": "online-store",
  "version": "1.0.0",
  "description": "",
  "main": "webpack.base.config.js",
  "scripts": {
    "start": "webpack serve --open  --env mode=dev",
    "build": "webpack  --env mode=prod",
    "format": "prettier --write \"src/**/*.ts\"",
    "ci:format": "prettier --check \"src/**/*.ts\"",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "homepage": "",
  "validate-branch-name": {
    "pattern": "^(feat|fix|chore|refactor|docs)/RSS-ECOMM-[1-4]_[0-9]{2,}_[A-Z][a-zA-Z_]+$",
    "errorMsg": "Invalid branch name! Please, rename branch using `git branch -m new-branch-name` command. Use this template: (feat|fix|chore|refactor|docs)/RSS-ECOMM-#_##_Name_of_task"
  },
  "lint-staged": {
    "**/*.{ts}": [
      "eslint --max-warnings=0",
      "prettier --write"
    ],
    "**/*.{html,json,js,css,scss,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^6.10.0",
    "dotenv-webpack": "^8.0.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-webpack-plugin": "^4.0.1",
    "file-loader": "^6.2.0",
    "html-loader": "^5.0.0",
    "html-webpack-plugin": "^5.6.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "mini-css-extract-plugin": "^2.8.1",
    "postcss": "^8.4.35",
    "postcss-loader": "^8.1.1",
    "postcss-preset-env": "^9.4.0",
    "prettier": "3.2.5",
    "sass": "^1.71.1",
    "sass-loader": "^14.1.1",
    "sass-resources-loader": "^2.2.5",
    "style-loader": "^3.3.4",
    "ts-loader": "^9.5.1",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "typescript": "^5.3.3",
    "validate-branch-name": "^1.3.0",
    "webpack": "^5.90.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.2"
  }
}
